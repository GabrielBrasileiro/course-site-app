<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="br.com.universodoandroid.coursesiteapp.modules.resetpassword.ResetPasswordActivity" />

    </data>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context="universodoandroid.udroid.LoginSystem.MainActivity">

        <LinearLayout
            android:layout_gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            tools:context="next.android.gabriel.com.justjava.MainActivity"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esqueceu sua senha ?"
                android:textSize="25sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:textColor="#000000"
                android:id="@+id/textView"
                />

            <TextView
                android:layout_width="331dp"
                android:layout_height="34dp"
                android:text="Digite o endereÃ§o de e-mail da conta!"
                android:inputType="textCapWords"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginBottom="10dp" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/email_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:hint="Insira o seu e-mail"
                    android:inputType="textEmailAddress" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/reset_email_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Enviar E-mail"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/return_button"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:text="Voltar"
                android:textAllCaps="true"
                android:textSize="12dp" />

        </LinearLayout>

    </ScrollView>

</layout>